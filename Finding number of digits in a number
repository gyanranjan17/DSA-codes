//Iterative solution
#include <iostream>
using namespace std;
int countDigit(int n)
{
    int count=0;
    while(n!=0)
    {
        n=n/10;
        count++;
    }
    return count;
}
int main()
{
   int x;
   cin>>x;
   cout<<countDigit(x);
   return 0;
}

//Recursive Solution
#include <iostream>
using namespace std;
int countDigit(int n)
{
    int count=0;
    if(n==0)
    return 0;
    return 1+countDigit(n/10);
}
int main()
{
   int x;
   cin>>x;
   cout<<countDigit(x);
   return 0;
}

//Logarithmic Solution
#include <iostream>
#include <math.h>
using namespace std;
int countDigit(int n)
{
    return floor(log10(n)+1);
}
int main()
{
   int x;
   cin>>x;
   cout<<countDigit(x);
   return 0;
}
